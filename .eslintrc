{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "mocha": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["jsx-control-statements", "import"],
  "globals": {
    "__SERVER__": true,
    "__CLIENT__": true,
    "If": true,
    "Else": true,
    "For": true
  },
  "settings": {
    "import/ignore": [
      "node_modules",
      "config.js",
      "app/utils/configureStore",
      "app/components/DevTools"
    ],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "new-cap": 0,
    "react/prop-types": 0,
    "react/prefer-stateless-function": 0,
    "import/no-unresolved": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "jsx-control-statements/jsx-for-require-each": 1,
    "jsx-control-statements/jsx-for-require-index": 1,
    "jsx-control-statements/jsx-for-require-of": 1,
    "jsx-control-statements/jsx-for-single-child": 1,
    "jsx-control-statements/jsx-if-require-condition": 1,
    "jsx-control-statements/jsx-if-single-child": 1,
    "jsx-control-statements/jsx-use-if-tag": 1
  }
}
